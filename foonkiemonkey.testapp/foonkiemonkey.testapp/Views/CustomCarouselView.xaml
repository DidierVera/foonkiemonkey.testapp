<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="foonkiemonkey.testapp.Views.CustomCarouselView">
        <Frame CornerRadius="50" >
            <StackLayout>
                <Frame CornerRadius="50" IsClippedToBounds="True">
                    <Image x:Name="imgField" HorizontalOptions="FillAndExpand" />
                </Frame>
                <Label x:Name="lblTitle" Margin="28,20" FontFamily="DM-Serif-Display" FontSize="30" TextColor="#000"  />
                    <BoxView HeightRequest="1" Margin="28, 0" WidthRequest="35" BackgroundColor="#000" HorizontalOptions="StartAndExpand" />
                    <Label x:Name="lblDescription" Margin="28, 20" FontFamily="Rubik-Regular" FontSize="12" TextColor="#000" />
                <ImageButton x:Name="btnViewProject" Margin="28,0" Source="img_carousel_button" />
            </StackLayout>
        </Frame>
</ContentView>